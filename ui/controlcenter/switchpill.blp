using Gtk 4.0;

template $ControlSwitchPill: Box {
    styles [
        "card",
        "m-1",
        "rounded",
    ]

    Box pill {
        styles [
            "hover-bg-5",
            "p-1",
            "rounded",
            "transition",
        ]

        Image icon {
            icon-name: "media-eq-symbolic";

            styles [
                "p-2",
            ]
        }

        Box {
            orientation: vertical;
            hexpand: true;

            Inscription title {
                text: "Title";
                halign: fill;
                text-overflow: ellipsize_end;

                styles [
                    "caption-heading",
                ]
            }

            Inscription subtitle {
                text: "subtitle";
                halign: fill;
                text-overflow: ellipsize_end;

                styles [
                    "caption",
                    "dimmed",
                ]
            }
        }
    }
}
